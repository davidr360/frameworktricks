@model IEnumerable<FrameworkTricks.Application.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2 class="mb-4">Restaurants @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary float-right" })</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(x => x.Name)</th>
        <th>@Html.DisplayNameFor(x => x.Cuisine)</th>
        <th></th>
    </tr>

@foreach (var restaurant in Model) {
    <tr>
        <td>@Html.DisplayFor(x => restaurant.Name)</td>
        <td>@Html.DisplayFor(x => restaurant.Cuisine)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = restaurant.Id }, new { @class = "btn btn-sm btn-success" })
            @Html.ActionLink("Details", "Details", new { id = restaurant.Id }, new { @class = "btn btn-sm btn-warning" })
            @Html.ActionLink("Delete", "Delete", new { id = restaurant.Id }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>

@model FrameworkTricks.Web.Controllers.Employee

<h3 class="mb-3">Create a new Employee</h3>

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "employee-list" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth)
        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control datepicker" } })
    </div>

    <input type="submit" value="Create" class="btn btn-primary mb-4" />
}